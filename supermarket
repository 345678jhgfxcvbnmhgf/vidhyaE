          l=capsicum();
          break;
          
      }
      //Calculating Overall cast
      totalamount=a+b+c+d+e+f+g+h+i+j+k+l;
      cout<<"\nOverall  total cost is:"<<totalamount;
      //End page
      goto start;
      
    
    

    return 0;
}
